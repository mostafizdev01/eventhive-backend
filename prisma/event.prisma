model Event {
    id             String        @id @default(cuid())
    title          String
    description    String?
    bannerImage    String?
    location       String?
    eventDate      DateTime?
    startTime      String?
    endTime        String?
    ticketPrice    Float?        @default(0)
    totalSeats     Int?          @default(0)
    availableSeats Int?          @default(0)
    status         EventStatus   @default(OPEN)
    // relations
    hostId         String
    hosts          Host          @relation(fields: [hostId], references: [id])
    category       String?
    tickets        EventJoin[]
    reviews        Review[]
    createdAt      DateTime      @default(now())
    updatedAt      DateTime      @updatedAt
}

// -------------------------------------------
// EVENT JOIN / TICKET MODEL
// -------------------------------------------

model EventJoin {
    id            String        @id @default(cuid())
    bookingDate   DateTime      @default(now())
    status        TicketStatus  @default(PENDING)
    paymentStatus PaymentStatus @default(UNPAID)
    // relations
    userId        String
    eventId       String
    participant   Participant   @relation(fields: [userId], references: [id])
    event         Event         @relation(fields: [eventId], references: [id])
    payment       Payment?
    createdAt     DateTime      @default(now())
}
